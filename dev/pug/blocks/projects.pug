                    figure.projects__item
                        img(src="static/images/projects/10.jpg" alt="DataPoint")
                        figcaption
                            a.icon.icon_link(href="https://www.softpointcloud.com/products_datapoint_Spanish.html" rel="follow") DataPoint
                    figure.projects__item
                        img(src="static/images/projects/11.jpg" alt="ControlPoint")
                        figcaption
                            a.icon.icon_link(href="https://www.softpointcloud.com/products_controlpoint_Spanish.html" rel="follow") ControlPoint
                    figure.projects__item
                        img(src="static/images/projects/12.jpg" alt="MarketPlace")
